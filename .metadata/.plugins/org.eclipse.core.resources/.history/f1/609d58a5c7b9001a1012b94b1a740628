			System.out.println("6. 곡 정렬하기 ");
			System.out.println("0. 프로그램종료");
			System.out.println("메뉴 선택: ");
			int menu = sc.nextInt(); 
			sc.nextLine(); 
			
			System.out.println();
			
			switch(menu) {
			case 1 :  insertMusic(); break;
			case 2 :  break;
			case 3 :  break;
			case 4 :  break;
			case 5 :  break;
			case 6 :  break; 
			case 0 : System.out.println("end of program"); return; 
			default : System.out.println("잘못 입력하셧습니다. 다시 이렵해주세요.");
			}
			
		}
		
		
	}
	/**
	 * 서브화면1. 신규 곡을 추가하며는 
	 */
	
